{
    "builders": [
        {

            "vm_name": "alpine",
            "type": "virtualbox-iso",
            "guest_os_type": "Linux26_64",
            "guest_additions_mode": "disable",
            "headless": false,
            "http_directory": "http",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
                [ "modifyvm", "{{.Name}}", "--cpus", "2"],
                [ "modifyvm", "{{.Name}}", "--vram", "32"],
                [ "modifyvm", "{{.Name}}", "--nictype1", "virtio"],
                [ "modifyvm", "{{.Name}}", "--nictype2", "virtio"],
                [ "modifyvm", "{{.Name}}", "--nictype3", "virtio"],
                [ "modifyvm", "{{.Name}}", "--nictype4", "virtio"]
            ],
            "disk_size": "8048",
            "hard_drive_interface": "sata",
            "hard_drive_discard": true,
            "iso_checksum": "e6bbcab275b704bc6521781f2342fff084700b458711fdf315a5816d9885943c",

            "iso_urls": [
                "iso/alpine-virt-3.16.3-x86_64.iso",
                "https://dl-cdn.alpinelinux.org/alpine/v3.16/releases/x86_64/alpine-virt-3.16.3-x86_64.iso"
            ],
            "communicator": "ssh",
            "ssh_password": "idris-playground",
            "ssh_timeout": "3m",
            "ssh_username": "root",
            "boot_wait": "30s",
            "boot_command": [
                "root<enter><wait>",

                "ifconfig eth0 up && udhcpc -i eth0<enter><wait5>",

                "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/answers<enter><wait>",

                "setup-alpine -f $PWD/answers<enter><wait5>",

                "idris-playground<enter><wait>",
                "idris-playground<enter><wait5>",

                "<enter><wait5>",
                "<enter><wait5>",
                "<enter><wait5>",

                "y<enter><wait5>",

                "mount /dev/sda3 /mnt<enter>",

                "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter>",

                "umount /mnt<enter>",

                "reboot<enter>"
            ],
            "shutdown_command": "echo 'idris-playground' | /sbin/poweroff"
        }
    ],
    "post-processors": [],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'idris-playground' | sh {{.Path}}",
            "expect_disconnect": true,
            "scripts": [
                "scripts/00-apk.sh",
                "scripts/01-setup.sh",
                "scripts/02-cleanup.sh"
            ]
        }
    ]
}
